// app global css
a
  text-decoration none
  color inherit

  &:focus
    outline 1px solid rgba(0, 0, 0, .1)

.link
  color #44629e

  &:active
    color #44629e

.slide-left-leave-active, .slide-right-enter
  transform translate(-30px, 0)
  opacity 0

.slide-left-enter, .slide-right-leave-active
  transform translate(30px, 0)
  opacity 0

.child-view
  position absolute
  transition all .15s ease-out

.container
  margin 0 auto

  @media (max-width 575px)
    max-width 100

  @media (min-width 576px) and (max-width 675px)
    max-width 540px

  @media (min-width 676px) and (max-width 791px)
    max-width 633px

  @media (min-width 792px) and (max-width 928px)
    max-width 724px

  @media (min-width 929px) and (max-width 1088px)
    max-width 870px

  @media (min-width 1089px) and (max-width 1199px)
    max-width 1020px

  @media (min-width 1200px) and (max-width 1399px)
    max-width 1140px

  @media (min-width 1400px)
    max-width 1320px
