{
  "name": "Customer",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string"
    },
    "surnames": {
      "type": "string"
    },
    "lang": {
      "type": "string"
    },
    "birthDate": {
      "type": "date"
    },
    "state": {
      "type": "boolean",
      "default": true
    }
  },
  "validations": [],
  "relations": {
    "orders": {
      "type": "hasMany",
      "model": "Order",
      "foreignKey": "customerId",
      "options": {
        "nestRemoting": true
      }
    },
    "accessTokens": {
      "type": "hasMany",
      "model": "AccessToken",
      "foreignKey": "userId",
      "options": {
        "disableInclude": true
      }
    },
    "addresses": {
      "type": "hasMany",
      "model": "Address",
      "foreignKey": "customerId",
      "options": {
        "nestRemoting": true
      }
    },
    "ratings": {
      "type": "hasMany",
      "model": "Rating",
      "foreignKey": "customerId",
      "options": {
        "nestRemoting": true
      }
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "CustomLogin"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY",
      "property": "login"
    }
  ],
  "methods": {
    "CustomLogin": {
      "accepts": [
        {
          "arg": "req",
          "type": "object",
          "http": {
            "source": "req"
          }
        },
        {
          "arg": "res",
          "type": "object",
          "http": {
            "source": "res"
          }
        }
      ],
      "returns": [],
      "description": "Login",
      "http": {
        "verb": "post",
        "path": "/CustomLogin"
      },
      "documented": true
    }
  }
}
