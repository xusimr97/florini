{
  "name": "Post",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "image": {
      "type": "string",
      "required": true
    },
    "type": {
      "type": "string",
      "required": true
    },
    "url": {
      "type": "string",
      "required": true
    },
    "state": {
      "type": "Boolean",
      "default": 1
    }
  },
  "validations": [],
  "relations": {
    "postTranslations": {
      "type": "hasMany",
      "model": "PostTranslation",
      "foreignKey": "postId",
      "options": {
        "nestRemoting": true
      }
    }
  },
  "acls": [
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    }
  ],
  "methods": {
    "createPost": {
      "accepts": [
        {
          "arg": "req",
          "type": "object",
          "http": {
            "source": "req"
          }
        },
        {
          "arg": "res",
          "type": "object",
          "http": {
            "source": "res"
          }
        }
      ],
      "returns": [],
      "description": "Create a Post",
      "http": {
        "verb": "post",
        "path": "/CustomCreate"
      },
      "scopes": ["write"],
      "documented": true
    },
    "editPost": {
      "accepts": [
        {
          "arg": "req",
          "type": "object",
          "http": {
            "source": "req"
          }
        },
        {
          "arg": "res",
          "type": "object",
          "http": {
            "source": "res"
          }
        },
        {
          "arg": "id",
          "type": "string",
          "http": {
            "source": "path"
          }
        }
      ],
      "returns": [],
      "description": "Edit a Post",
      "http": {
        "verb": "post",
        "path": "/CustomEdit/:id"
      },
      "scopes": ["write"],
      "documented": true
    }
  }
}
