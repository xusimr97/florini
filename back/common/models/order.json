      "foreignKey": "customerId",
      "options": {
        "nestRemoting": true
      }
    },
    "orderRows": {
      "type": "hasMany",
      "model": "OrderRow",
      "foreignKey": "orderId",
      "options": {
        "nestRemoting": true
      }
    },
    "payment": {
      "type": "hasOne",
      "model": "Payment",
      "foreignKey": "orderId",
      "options": {
        "nestRemoting": true
      }
    },
    "shipping": {
      "type": "hasOne",
      "model": "Shipping",
      "foreignKey": "orderId",
      "options": {
        "nestRemoting": true
      }
    }
  },
