      "accepts": [
        {
          "arg": "req",
          "type": "object",
          "http": {
            "source": "req"
          }
        },
        {
          "arg": "res",
          "type": "object",
          "http": {
            "source": "res"
          }
        }
      ],
      "returns": [],
      "description": "Create an Order and relations",
      "http": {
        "verb": "post",
        "path": "/CustomCreate"
      },
      "scopes": ["write"],
      "documented": true
    },
    "editOrder": {
      "accepts": [
        {
          "arg": "req",
          "type": "object",
          "http": {
            "source": "req"
          }
        },
        {
