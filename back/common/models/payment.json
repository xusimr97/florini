{
  "name": "Payment",
  "plural": "Payments",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "date": {
      "type": "date",
      "required": true
    },
    "paymentMethodId": {
      "type": "string",
      "required": true
    },
    "orderId": {
      "type": "string",
      "required": true
    },
    "amount": {
      "type": "number",
      "required": true
    },
    "billingAddress": {
      "type": "string",
      "required": true
    },
    "billingZipCode": {
      "type": "number",
      "required": true
    },
    "billingCity": {
      "type": "string",
      "required": true
    },
    "billingProvince": {
      "type": "string",
      "required": true
    },
    "billingCountry": {
      "type": "string",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "paymentMethod": {
      "type": "belongsTo",
      "model": "PaymentMethod",
      "foreignKey": "paymentMethodId",
      "options": {
        "nestRemoting": true
      }
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
